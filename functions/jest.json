{
    "rootDir": ".",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json",
        "isolatedModules": true
      }
    },
    "setupFiles": [],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": ["ts", "js"],
    "testMatch": ["**/test/**/*.spec.(ts)"]
  }
  